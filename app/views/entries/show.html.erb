<% content_for :title do %>
  <%= @entry.name %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.name %>
      </p>
    <div class="panel-block">
      Hours driven: <%= @entry.hours_driven %>
    </div>

    <div class="panel-block">
      Miles driven: <%= @entry.miles_driven %>
    </div>

    <div class="panel-block">
      Notes: <%= @entry.notes %>
    </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
    </div>
    <div class="column">
      <!-- --->
      </div>
  </div>
</div>